.base-style .icon { 
  background-image: url(https://static.dmall.com/kayak-project/kayak-lib/dist/kayak-lib/globalstyle/sprt.png);
  background-repeat: no-repeat;
  background-size: 800rpx auto;
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
}

.base-style .icon.bar {
    background-image: url(http://static.dmall.com/kayak-project/wxdmall/dist/wxdmall/common/image/btm-bar-sprt.png);
    background-size: 500rpx auto;	
}

/*图标*/
.base-style .icon.bar.game { background-position: 0 0; }
.base-style .icon.bar.game.current { background-position: 0 -100rpx;}
.base-style .icon.bar.record { background-position: -100rpx 0;}
.base-style .icon.bar.record.current { background-position: -100rpx -100rpx;}
.base-style .icon.bar.mine { background-position: -400rpx 0;}
.base-style .icon.bar.mine.current { background-position: -400rpx -100rpx;}